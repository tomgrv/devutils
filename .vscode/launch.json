    "version": "0.2.0",
    "configurations": [
        {
            "name": "Laravel",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "artisan",
                "serve",
                "--port=8000",
                "--host=0.0.0.0"
            ],
            "program": "",
            "cwd": "${workspaceRoot}",
            "port": 9000,
            "preLaunchTask": "dev-start",
            "postDebugTask": "dev-stop",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "compounds": [
        {
            "name": "Platform",
            "configurations": [
                "Laravel"
            ],
            "preLaunchTask": "",
            "stopAll": true
