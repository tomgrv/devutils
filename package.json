{
    "name": "@tomgrv/devutils",
    "version": "0.0.6",
    "description": "Configure dev environment with git hooks, commitlint, commitizen, lint-staged, prettier, standard-version, and more",
    "type": "module",
    "bin": {
        "devutils": "node ./index.js"
    },
    "scripts": {
        "config": "node ./index.js",
        "postinstall": "npm run config",
        "lint": "lint-staged",
        "update": "npx npm-check-updates -i -u",
        "update-all": "npm run update -ws --root"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "subject-case": [
                2,
                "never",
                [
                    "start-case",
                    "pascal-case",
                    "upper-case"
                ]
            ],
            "scope-enum": [
                2,
                "always",
                [
                    "deps",
                    "release",
                    "security",
                    "i18n",
                    "config",
                    "add",
                    "remove",
                    "breaking",
                    "modules",
                    "packages",
                    "ui-ux",
                    "api",
                    "model"
                ]
            ]
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,md,html,css,json,vue, yaml, yml}": [
            "prettier --write"
        ],
        "*.php": [
            "composer lint"
        ]
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "prettier": {
        "insertPragma": true,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "chalk-cli": "^5.0.1",
        "flat": "^6.0.1",
        "fs-extra": "^11.2.0",
        "glob": "^10.3.12",
        "merge-packages": "^0.1.6",
        "simple-git": "^3.24.0"
    },
    "peerDependencies": {
        "@commitlint/cli": "^19.2.2",
        "@commitlint/config-conventional": "^19.2.2",
        "@commitlint/core": "^19.2.2",
        "@commitlint/cz-commitlint": "^19.2.0",
        "commitizen": "^4.3.0",
        "conventional-changelog-cli": "^2.1.1",
        "devmoji": "^2.3.0",
        "git-precommit-checks": "3.1.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "standard-version": "^9.5.0"
    },
    "git-precommit-checks": {
        "rules": [
            {
                "message": "You've got leftover conflict markers",
                "regex": "/^[<>|=]{4,}/m"
            },
            {
                "filter": "(^package\\.json|\\.git-precommit-checks.json)$",
                "message": "You have unfinished devs",
                "nonBlocking": "true",
                "regex": "(?:FIXME|TODO)"
            }
        ]
    },
    "standard-version": {
        "bumpFiles": [
            {
                "filename": "composer.json",
                "type": "json"
            },
            {
                "filename": "package.json",
                "type": "json"
            },
            {
                "filename": "VERSION",
                "type": "plain-text"
            }
        ]
    }
}
