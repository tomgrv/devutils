#!/bin/sh
export PATH=/usr/bin:$PATH
. "$(dirname "$0")/_/husky.sh"

# Enable colors in Powershell
exec >/dev/tty 2>&1

# Apply commitlint rules to the latest commit message
echo -e "\e[34mâ†’\e[0m Applying commitlint rules to the latest commit..."
typeset var PLUGINS=$(cat package.json | npx jqn '.commitlint.extends' | tr -d "'[]:")
npm list --gobal $PLUGINS 2>/dev/null 1>&2 || npm install --gobal $PLUGINS 2>/dev/null 1>&2 && npx commitlint --edit "$1" && npx devmoji -e
